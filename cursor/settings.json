{
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.autoUpdate": "onlyEnabledExtensions",
  //
  // Workbench Settings
  //
  "workbench.tips.enabled": false,
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.labelFormat": "short",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.colorCustomizations": {
    "scrollbarSlider.background": "#80e2d5",
    "scrollbarSlider.hoverBackground": "#54968d",
    "tab.activeBorder": "#80e2d5"
  },
  //
  // General Editor Settings
  //
  "window.zoomLevel": 1,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontSize": 11,
  "editor.lineHeight": 2.4,
  "editor.fontFamily": "Fira Code",
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.cursorSurroundingLines": 8,
  "editor.accessibilitySupport": "off",
  "editor.renderLineHighlight": "gutter",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "expand",
  "editor.semanticHighlighting.enabled": true,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 2,
  "editor.minimap.showSlider": "always",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.rulers": [
    120
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  //
  // Performance
  //
  "extensions.ignoreRecommendations": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.updateImportsOnFileMove.enabled": "never",
  //
  // Terminal Settings
  //
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.showExitAlert": false,
  //
  // File Explorer Settings
  //
  "explorer.confirmDelete": false,
  "files.exclude": {
    "**/node_modules": true,
    "**/vendor": false,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.svn": true,
  },
  //
  // Files Settings
  //
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  //
  // Search Settings
  //
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/dist": true,
    "**/languages/**/*.php": true
  },
  //
  // Formatting Configuration
  //
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.phpcs": "explicit",
    "source.organizeImports": "never"
  },
  //
  // ESLint Configuration
  //
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    "./"
  ],
  //
  // TODO Highlight Settings
  //
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/vendor/**"
  ],
  //
  // Tailwind CSS
  //
  "tailwindCSS.includeLanguages": {
    "php": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    "tw=\"([^\"]*)",
    "tw={\"([^\"}]*)",
    "tw\\.\\w+`([^`]*)",
    "tw\\(.*?\\)`([^`]*)"
  ],
  //
  // GitLens Configuration
  //
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  //
  // PHPCS Settings
  //
  "phpcs.enable": true,
  "phpcs.executablePath": "/home/plovinicius/Jobs/utils/php/bin/phpcs",
  "phpcs.ignorePatterns": [
    "*/vendor/*"
  ],
  "phpcs.standard": "/home/plovinicius/Jobs/utils/php/vendor/awesomemotive/aioseo-phpcs/AIOSEO/ruleset.xml",
  "phpcs.autoConfigSearch": true,
  //
  // PHP Code Beautifier and Fixer Settings
  //
  "phpsab.fixerEnable": true,
  "phpsab.snifferEnable": true,
  "phpsab.executablePathCS": "/home/plovinicius/Jobs/utils/php/bin/phpcs",
  "phpsab.executablePathCBF": "/home/plovinicius/Jobs/utils/php/bin/phpcbf",
  "phpsab.standard": "/home/plovinicius/Jobs/utils/php/vendor/awesomemotive/aioseo-phpcs/AIOSEO/ruleset.xml",
  "phpsab.snifferMode": "onType",
  "phpsab.snifferTypeDelay": 250,
  "git.openRepositoryInParentFolders": "never",
  "npm.packageManager": "bun",
  //
  // PHP Configuration
  //
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "valeryanm.vscode-phpsab"
  },
  //
  // WordPress/PHP Specific
  //
  "files.associations": {
    "*.php": "php",
    "*.inc": "php",
    "*.module": "php",
    "*.theme": "php"
  },
  //
  // Intelephense (Primary PHP Language Server)
  //
  "intelephense.telemetry.enabled": false,
  "intelephense.files.maxSize": 5000000,
  "intelephense.files.associations": [
    "*.php",
    "*.phtml"
  ],
  "intelephense.files.exclude": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.git/**",
    "**/wp-admin/**",
    "**/wp-includes/**"
  ],
  "intelephense.completion.triggerParameterHints": true,
  "intelephense.completion.insertUseDeclaration": true,
  "intelephense.format.enable": true,
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
    "dom",
    "enchant",
    "exif",
    "FFI",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "gettext",
    "gmp",
    "hash",
    "iconv",
    "imap",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "meta",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "PDO",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "readline",
    "Reflection",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "xsl",
    "Zend OPcache",
    "zip",
    "zlib",
    "wordpress"
  ],
  //
  // File-specific formatters
  //
  "[html]": {
    "editor.tabSize": 4
  },
  "[go]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "[rust]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
}
